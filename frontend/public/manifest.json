{
    "manifest_version": 3,
    "name": "A!rrange Smart Bookmark",
    "version": "1.0.0",
    "description": "AI 기반 스마트 북마크 관리 크롬 확장 프로그램",
    "side_panel": {
      "default_path": "index.html"
    },
    "action": {
      "default_title": "A!rrange"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "bookmarks",
      "storage",
      "sidePanel",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["Readability.js", "contentScript.js"]
      }
    ],
    "icons": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }